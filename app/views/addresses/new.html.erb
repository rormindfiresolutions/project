<% provide(:title, 'Address') %>

<div class = 'register-section container'>

<h1> Address </h1>

	<div class="col-md-6 col-md-offset-3">

		<%= form_for(@address, url: addresses_path, html: {method: 'post'}) do |f| %>
			<%= render 'error_messages' %>

			<div class = 'col-md-11'>
				<%= f.label :address_type %>
			</div>
			<div class = "col-sm-8">
	      <div class ="col-sm-6">
	          Home
	          <%= f.radio_button :address_type, 'home', class: 'radiobutton radio' %>
	      </div>
	      <div class ="col-sm-6">
	          Work
	          <%= f.radio_button :address_type, 'work', class: 'radiobutton radio' %>
	      </div>
	    </div>
	    
			<div class = 'col-md-11'>
				<%= f.label :name %>
			</div>
			<div class = 'col-md-11'>
				<%= f.text_field :name, placeholder: 'Name', class: "form-control" %>
			</div>

			<%= render partial: 'shared/address_form', locals: { f: f } %>

			<div class = 'col-md-11'>
				<%= f.button 'Submit Details', class: "btn btn-primary" %>	
			</div>
		<% end %>
		
	</div>
	
</div>