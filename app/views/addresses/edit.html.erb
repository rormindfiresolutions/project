<% provide(:title, 'Edit Customer Address') %>

<div class = 'register-section container'>

<h1> Edit Address </h1>

	<div class="col-md-6 col-md-offset-3">

		<%= form_for(@address, url: address_path, html: {method: 'put'}) do |f| %>
			<%= render 'error_messages' %>

			<div class = 'col-md-11'>
				<%= f.label :address_type %>
			</div>
			<div class = 'col-md-11'>
				<%= f.text_field :address_type, autofocus: true, placeholder: 'Address Type', class: "form-control" %>
			</div>

			<div class = 'col-md-11'>
				<%= f.label :name %>
			</div>
			<div class = 'col-md-11'>
				<%= f.text_field :name, placeholder: 'Name', class: "form-control" %>
			</div>

			<%= render partial: 'shared/address_form', locals: { f: f } %>

			<div class = 'col-md-11'>
				<%= f.button 'Submit Details', class: "btn btn-primary" %>	
			</div>
		<% end %>

	</div>
	
</div>